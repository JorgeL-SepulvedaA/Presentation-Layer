@page
@model PresentationLayer_App.Pages.FormModel
@{
    ViewData["Title"] = "Form";
}
<fieldset class="container">
    <legend align="center" class="text-uppercase">→ login form ←</legend>
    <div class="container" id="LogIn_Form" align="justify">
        <form asp-page="" method="post" enctype="multipart/form-data" id="Form_LogIn">
            <div class="form-group" style="font: bold; font-size: large;">
                <label for="name">Nombre completo:</label>
                <input type="text" class="form-control text-italic" id="name" name="name" placeholder="Nombre completo aquí" required>
            </div>
            <div class="form-group" style="font: bold; font-size: large;">
                <label for="name">Edad (+18):</label>
                <input type="number" class="form-control text-italic" id="age" name="age" min=18 placeholder="Edad +18 aquí" required>
            </div>
            <div class="form-group" style="font: bold; font-size: large;">
                <label for="name">Nombre de usuario:</label>
                <input type="text" class="form-control text-italic" id="user" name="user" placeholder="Nombre de usuario aquí" required>
            </div>
            <div class="form-group" style="font: bold; font-size: large;">
                <label for="email">Correo:</label>
                <input type="email" class="form-control text-italic" id="email" name="email" aria-describedby="emailHelp" placeholder="Nombre de usuario aquí" required>
            </div>

            <div class="form-group" style="font: bold; font-size: large;">
                <label for="password">Contraseña:</label>
                <input type="password" class="form-control text-italic" id="password" name="password" placeholder="Contraseña aquí" required>
            </div>
            <div class="form-group" style="font: bold; font-size: large;">
                <input type="submit" class="btn btn-outline-success btn-primary" value="Registrar" />
            </div>
        </form>
    </div>
</fieldset>